<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="100"
        android:entries="@array/pref_vibration_duration_list_titles"
        android:entryValues="@array/pref_vibration_duration_list_values"
        android:key="vibration_duration_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_feedback_vibration"/>

    <com.dualnback.data.settings.IntegerEditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_display_name"
        android:inputType="number"
        android:key="trial_length"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_trial_length_title_display_name"/>

</PreferenceScreen>
